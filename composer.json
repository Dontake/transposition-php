{
    "name": "dondake/music-transposition",
    "description": "PHP lib for music transposition",
    "type": "library",
    "license": "GPL-3.0-only",
    "autoload": {
        "psr-4": {
            "Dondake\\MusicTransposition\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dondake\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Vlad Kiryakov(Dondake)",
            "email": "wlad.kiryakov@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4"
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "phpunit": "@php ./vendor/bin/phpunit tests",
        "cli": "@php src/Console/cli.php",
        "test": [
            "@phpunit"
        ]
    }
}
